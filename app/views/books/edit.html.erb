<h1>Editing Book</h1>
<%=form_with model: @book do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit 'Update Book', class:'btn' %>
</div>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
<% end %>