<h1>Editing Book</h1>
<%=form_with model: @book do |f| %>
<div class="error_explanation">
<% if @book.errors.any? %>
  <h2 class="error-title"><%= @book.errors.count %> errors prohibited this book from being seved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div class="action">
  <%= f.submit 'Update Book', class:'btn' %>
</div>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
<% end %>